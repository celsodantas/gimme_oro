  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Description</th>
        <th>Date</th>
        <th>Budgets</th>
        <th>Type</th>
        <th>Amount</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @entries.each do |entry| %>
        <tr>
          <td><%= best_in_place entry, :description, type: :input %></td>
          <td><%= entry.date.strftime("%d/%b/%y") %></td>
          <td><input value="<%= entry.budgets.map {|b| b.description}.join(", ") %>" class="budget-tags" data-remote="entries/<%= entry.id %>.json"></td>
          <td><%= entry.entry_type %></td>
          <td> <strong><%= number_to_currency entry.amount %></strong> </td>
          <td><%= link_to 'Show', entry %></td>
          <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
          <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
