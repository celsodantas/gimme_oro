<h1>Listing budgets</h1>

<p id="notice"><%= notice %></p>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Amount</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @budgets.each do |budget| %>
      <tr>
        <td><%= budget.description %></td>
        <td><%= number_to_currency(budget.amount) %></td>
        <td><%= link_to 'Show', budget, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_budget_path(budget), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', budget, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Budget', new_budget_path %>
